<!DOCTYPE html>
<html>
  <head>
    <title>BookStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <nav class="navbar navbar-success">
  
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Keyerra's BookStore</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Root</a></li>
      <li><a href="#">Home</a></li>
      <li><a href="#">Help</a></li>
      <li><a href="#">About</a></li>
    </ul>
  
    </nav>
   
    <table class="table table-responsive">
      <tbody>
    <% if session[:user_id] %>
   <tr>
   <td><%= link_to 'Orders', orders_path, class:"btn btn-info" %></td>
   <td><%= link_to 'Products', products_path, class:"btn btn-info" %></td>
   <td><%= link_to 'Users', users_path, class:"btn btn-info" %></td>
   </tr>
   
   <%= button_to 'Logout', logout_path, method: :delete %>
   <% end %>
    <div>
    <%= yield %>
    
    </div>
    </tbody>
</table>
  </body>
</html>

